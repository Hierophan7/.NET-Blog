@model Blog.Entities.DTOs.Account.UserAuthenticateDto

@{
	ViewData["Title"] = "Вхід";
}

<link href="~/css/common.css" rel="stylesheet" type="text/css" />

<div class="vertical-center">
	<div class="w-50">
		<div class="bg-white p-5 rounded">
			<form asp-action="Authenticate" asp-controller="Account" method="post">
				<h2 class="text-center mb-5">Travel blog</h2>
				<h3 class="text-left">Вхід</h3>
				<div class="form-group row px-3">
					<label class="col-form-label">Введіть ваш email:</label><br />
					<input class="w-100" asp-for="Email" placeholder="Email" type="email" />
				</div>
				<div class="form-group row px-3">
					<label class="col-form-label">Введіть ваш пароль:</label><br />
					<input class="w-100" type="password" asp-for="Password" placeholder="Пароль" />
				</div>
				<div class="form-check">
					<input type="checkbox" class="form-check-input" id="rememberMe" asp-for="RememberMe">
					<label class="form-check-label" for="rememberMe">Запам'ятати мене</label>
				</div>
				<div class="small mt-2">
					<a class="text-left mb-0" asp-action="SendLinkForChengePassword" asp-controller="Account">Забули пароль?</a><br />
					Немає облікового запису? <a asp-action="Register" asp-controller="Account">Створіть його!</a>
				</div>
				<div class="text-center">
					<input class="mt-5 w-50 btn btn-outline-info" type="submit" value="Увійти" />
				</div>
			</form>
		</div>
	</div>
</div>
